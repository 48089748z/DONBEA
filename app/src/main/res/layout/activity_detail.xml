<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.uge01006.converter.DetailActivity"
    android:orientation="vertical"
    android:weightSum="100"
    android:background="@color/GREY_BACKGROUND_DARK_SUPER">

    <com.google.android.youtube.player.YouTubePlayerView
        android:id="@+id/YTVplayer"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="35"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="0.1"
        android:background="@color/GREY_TEXT_LIGHT_SUPER">
    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="4"
        android:orientation="horizontal"
        android:weightSum="100">
        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="3"/>
        <ImageView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:src="@drawable/views_24_green"
            android:contentDescription="@string/views" />
        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/TVviewsDetail"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:text="@string/views"
            android:textColor="@color/GREY_TEXT_LIGHT"
            android:textSize="15sp"
            android:gravity="center_vertical"
            android:layout_weight="35"/>
        <ImageView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:src="@drawable/user_24_yellow"
            android:contentDescription="@string/channel" />
        <TextView
            android:id="@+id/TVuserDetail"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:text="@string/channel"
            android:textColor="@color/GREY_TEXT_LIGHT"
            android:textSize="15sp"
            android:gravity="center_vertical"
            android:layout_weight="39"/>
        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="2"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100">
        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="5" />
        <TextView
            android:id="@+id/TVtitleDetail"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="90"
            android:text="@string/video"
            android:textColor="@color/GREY_TEXT_LIGHT_SUPER"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"/>
        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="5" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="4"
        android:orientation="horizontal"
        android:weightSum="100">
        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="5"/>
        <ImageView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:src="@drawable/like_24_blue"
            android:contentDescription="@string/likes" />
        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="2"/>
        <TextView
            android:id="@+id/TVlikesDetail"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/likes"
            android:textColor="@color/GREY_TEXT_LIGHT"
            android:textSize="15sp"
            android:gravity="center_vertical"/>
        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="5"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="4"
        android:orientation="horizontal"
        android:weightSum="100">
        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="5"/>
        <ImageView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:src="@drawable/dislike_24_red"
            android:contentDescription="@string/dislikes" />
        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="2"/>
        <TextView
            android:id="@+id/TVdislikesDetail"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/dislikes"
            android:textColor="@color/GREY_TEXT_LIGHT"
            android:textSize="15sp"
            android:gravity="center_vertical"/>
        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="5"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="7"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="0.1"
        android:background="@color/GREY_TEXT_LIGHT_SUPER">
    </TextView>

    <LinearLayout
        android:id="@+id/LLdownload"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="11"
        android:weightSum="100"
        android:orientation="horizontal">
        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="25"/>
        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:text="@string/convert"
            android:textColor="@color/GREY_TEXT_LIGHT"
            android:gravity="center"
            android:textSize="18sp"/>
        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="5"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_logo"
            android:contentDescription="@string/logo" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="0.1"
        android:background="@color/GREY_TEXT_LIGHT_SUPER">
    </TextView>

    <LinearLayout
        android:id="@+id/LLwatchYoutube"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="11"
        android:weightSum="100"
        android:orientation="horizontal">
        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="25"/>
        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:text="@string/watch_on_youtube"
            android:textColor="@color/GREY_TEXT_LIGHT"
            android:gravity="center"
            android:textSize="18sp"/>
        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="5"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/play_48_red"
            android:contentDescription="@string/watch_on_youtube" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="0.1"
        android:background="@color/GREY_TEXT_LIGHT_SUPER">
    </TextView>

    <LinearLayout
        android:id="@+id/LLshareVideo"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="11"
        android:weightSum="100"
        android:orientation="horizontal">
        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="25"/>
        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:text="@string/share"
            android:textColor="@color/GREY_TEXT_LIGHT"
            android:gravity="center"
            android:textSize="18sp"/>
        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="5"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/share_48_green"
            android:contentDescription="@string/share" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="0.1"
        android:background="@color/GREY_TEXT_LIGHT_SUPER">
    </TextView>

</LinearLayout>
